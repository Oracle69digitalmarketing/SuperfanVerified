{
  "name": "superfan-backend",
  "version": "1.0.0",
  "description": "Superfan backend API with OAuth providers",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "setup": "bash setup-backend.sh",
    "start": "node -r dotenv/config app.js",
    "dev": "cross-env NODE_ENV=development nodemon -r dotenv/config app.js",
    "test:users": "node -r dotenv/config testUsers.js",
    "test:scans": "node -r dotenv/config testScans.js",
    "test:leaderboard": "node -r dotenv/config testLeaderboard.js",
    "test:wallets": "node -r dotenv/config testWallets.js",
    "test:referrals": "node -r dotenv/config testReferrals.js",
    "test:verify": "node -r dotenv/config testVerify.js",
    "test:gated": "node -r dotenv/config testGatedContent.js",
    "test:external": "node -r dotenv/config testExternalData.js",
    "test:all": "npm run test:users && npm run test:scans && npm run test:leaderboard && npm run test:wallets && npm run test:referrals && npm run test:verify && npm run test:gated && npm run test:external"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "connect-flash": "^0.1.1",
    
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    
    "morgan": "^1.10.1",
    "nanoid": "^5.1.5",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-spotify": "^2.0.0",
    "passport-twitter": "^0.1.5",
    "pg": "^8.16.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10"
  }
}
